{
  "name": "@webpack-contrib/test-utils",
  "version": "0.1.0",
  "author": "Webpack Contrib (@webpack-contrib)",
  "description": "Loader && Plugin Test Helpers",
  "license": "MIT",
  "main": "dist/cjs.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "npm run build -- -w",
    "build": "cross-env NODE_ENV=production babel src -d dist --ignore 'src/**/*.test.js' --copy-files",
    "clean": "del-cli dist",
    "commitlint": "commitlint",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "lint": "eslint --cache src test",
    "ci:lint:commits": "commitlint --from=${CIRCLE_BRANCH} --to=${CIRCLE_SHA1}",
    "lint-staged": "lint-staged",
    "prebuild": "npm run clean",
    "prepublish": "npm run build",
    "release": "standard-version",
    "release:ci": "conventional-github-releaser -p angular",
    "release:validate": "commitlint --from=$(git describe --tags --abbrev=0) --to=$(git rev-parse HEAD)",
    "security": "nsp check",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --collectCoverageFrom='src/**/*.js' --coverage",
    "ci:lint": "npm run lint && npm run security",
    "ci:test": "npm run test -- --runInBand",
    "ci:coverage": "npm run test:coverage -- --runInBand",
    "defaults": "webpack-defaults"
  },
  "dependencies": {
    "loader-utils": "^1.0.0",
    "schema-utils": "^0.4.0",
    "del": "^3.0.0",
    "memory-fs": "^0.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^5.0.0",
    "@commitlint/config-angular": "^5.0.0",
    "@webpack-contrib/eslint-config-webpack": "^2.0.0",
    "babel-cli": "^6.0.0",
    "babel-jest": "^22.0.0",
    "babel-plugin-transform-object-rest-spread": "^6.0.0",
    "babel-polyfill": "^6.0.0",
    "babel-preset-env": "^1.0.0",
    "conventional-github-releaser": "^2.0.0",
    "cross-env": "^5.0.0",
    "del-cli": "^1.0.0",
    "eslint": "^4.0.0",
    "eslint-plugin-import": "^2.0.0",
    "eslint-plugin-prettier": "^2.0.0",
    "husky": "^0.14.0",
    "jest": "^22.0.0",
    "jsdoc-to-markdown": "^3.0.0",
    "lint-staged": "^6.0.0",
    "nsp": "^3.0.0",
    "pre-commit": "^1.0.0",
    "prettier": "^1.0.0",
    "standard-version": "^4.0.0",
    "webpack-defaults": "^2.0.0-rc.4"
  },
  "engines": {
    "node": ">= 6.9.0 || >= 8.9.0"
  },
  "peerDependencies": {
    "webpack": "^3.0.0 || ^4.0.0",
    "jsdom": "^11.0.0"
  },
  "homepage": "https://github.com/webpack-contrib/test-utils",
  "repository": "https://github.com/webpack-contrib/test-utils",
  "bugs": "https://github.com/webpack-contrib/test-utils/issues",
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
